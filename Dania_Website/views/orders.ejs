 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
    <style>
      .action-buttons {
        text-align: center;
        background-color: #f9f9f9;
      }
      .edit-btn, .delete-btn {
        margin: 5px;
        padding: 5px 10px;
        cursor: pointer;
      }
      .edit-btn:hover, .delete-btn:hover {
        background-color: #f1f1f1;
      }
      /* Optional: Smooth transition for border and shadow */
      .order-row, .action-buttons {
        transition: all 0.3s ease;
      }
    </style>
 </head>
 <body style="margin: 0; height: 100vh;">
    <div class="d-flex" style="height: 100vh;">
  
      <!-- Sidebar -->
      <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px; height: 100vh;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
          <span class="fs-4">Sidebar</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="#home" class="nav-link active" id="home-tab" data-bs-toggle="pill" aria-current="page">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
              Home
            </a>
          </li>
          <li>
            <a href="#orders" class="nav-link text-white" id="orders-tab" data-bs-toggle="pill">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
              Orders
            </a>
          </li>
          <li>
            <a href="#products" class="nav-link text-white" id="products-tab" data-bs-toggle="pill">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
              Products
            </a>
          </li>
          <li>
            <a href="#customers" class="nav-link text-white" id="customers-tab" data-bs-toggle="pill">
              <svg class="bi pe-none me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
              Customers
            </a>
          </li>
        </ul>
        <hr>
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
            <strong>mdo</strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="#">New project...</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#">Sign out</a></li>
          </ul>
        </div>
      </div>
  
      <!-- Main Content Area -->
      <main class="flex-grow-1 p-3">
        <h1 class="mb-4">Data Table</h1>
  
        <!-- Bootstrap Tab Content -->
        <div class="tab-content" id="myTabContent">
          <!-- Home Tab (default) -->
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <p>Welcome to the home page.</p>
          </div>
  
          <!-- Orders Tab -->
          <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Address</th>
                  <th scope="col">Phone Number</th>
                  <th scope="col">Date</th>
                  <th scope="col">Notes</th>
                  <th scope="col">Order Number</th>
                </tr>
              </thead>
              <tbody>
                <% orders.forEach(order => { %>
                  <% if (order.editable) { %>
                    <!-- Editable row for even IDs -->
                     <form action="">
                    <tr class="order-row">
                      <td><input type="text" name="name" value="<%= order.name %>"></td>
                      <td><input type="text" name="email" value="<%= order.email %>"></td>
                      <td><input type="text" name="address" value="<%= order.address %>"></td>
                      <td><input type="text" name="phone" value="<%= order.phone %>"></td>
                      <td><input type="text" name="date" value="<%= order.date %>"></td>
                      <td><textarea name="notes"><%= order.notes %></textarea></td>
                      <td><input type="text" name="order" value="<%= order.order %>"></td>
                    </tr>
                  
                    <tr class="action-buttons" style="display:none;">
                      <td colspan="7" class="text-center">
                        <button class="edit-btn" type="submit">Save</button>
                        <button class="delete-btn" type="submit">Cancel</button>
                      </td>
                    </tr>
                  </form>
                  <% } else { %>
                    <!-- Display-only row for odd IDs -->
                    <tr class="order-row">
                      <td><%= order.name %></td>
                      <td><%= order.email %></td>
                      <td><%= order.address %></td>
                      <td><%= order.phone %></td>
                      <td><%= order.date %></td>
                      <td><%= order.notes %></td>
                      <td><%= order.order %></td>
                    </tr>
                    <!-- Hidden action buttons for odd IDs -->
                    <tr class="action-buttons" style="display:none;">
                      <td colspan="7" class="text-center">
                        <a href="orders/editAllow/<%= order.id %>">
                          <button class="edit-btn">Edit</button>
                        </a>
                        <a href="/orders/delete/<%= order.id %>">
                          <button class="delete-btn">Delete</button>
                        </a>
                      </td>
                    </tr>
                  <% } %>
                <% }); %>
              </tbody>
            </table>
          </div>
  
          <!-- Products Tab -->
          <div class="tab-pane fade" id="products" role="tabpanel" aria-labelledby="products-tab">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th scope="col">Product</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Stock</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Product A</td>
                  <td>Category 1</td>
                  <td>$10</td>
                  <td>100</td>
                </tr>
                <tr>
                  <td>Product B</td>
                  <td>Category 2</td>
                  <td>$20</td>
                  <td>50</td>
                </tr>
                <!-- Add more rows as needed -->
              </tbody>
            </table>
          </div>
  
          <!-- Customers Tab -->
          <div class="tab-pane fade" id="customers" role="tabpanel" aria-labelledby="customers-tab">
            <p>Customer information goes here.</p>
          </div>
        </div>
  
      </main>
  
    </div>
  
    <!-- Bootstrap JS (needed for Tab functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const rows = document.querySelectorAll(".order-row");
    
      rows.forEach((row) => {
        row.addEventListener('contextmenu', (e) => {
          e.preventDefault(); // Prevent the default right-click menu
    
          // Hide all action buttons initially
          document.querySelectorAll('.action-buttons').forEach((buttonRow) => {
            buttonRow.style.display = 'none';
            buttonRow.style.boxShadow = ''; // Reset box shadow of previous rows
          });
    
          // Reset border of all order rows
          document.querySelectorAll('.order-row').forEach((r) => {
            r.style.border = ''; // Reset any previous border
          });
    
          // Highlight the current order row and show the action row
          row.style.border = '5px solid #007bff'; // Add a border to highlight the order row
          const actionRow = row.nextElementSibling; // Get the next row (which is the action row)
    
          if (actionRow) {
            actionRow.style.display = 'table-row'; // Show the action row below
            actionRow.style.boxShadow = '0px 4px 8px rgba(0, 123, 255, 0.2)'; // Add box shadow for emphasis
          }
        });
      });
    
      // Hide the action buttons and reset the border when clicking elsewhere
      document.addEventListener('click', (e) => {
        if (!e.target.closest('.order-row')) {
          document.querySelectorAll('.action-buttons').forEach((buttonRow) => {
            buttonRow.style.display = 'none'; // Hide action buttons
            buttonRow.style.boxShadow = ''; // Reset box shadow of action row
          });
    
          document.querySelectorAll('.order-row').forEach((r) => {
            r.style.border = ''; // Reset border of order rows
          });
        }
      });
    </script>
  </body>
  
  
 </html>