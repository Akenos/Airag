              <form id="newOrderForm" method="post" action="/orders">
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input id="email1" type="email" name="email" class="form-control" placeholder="Your Email" required>
                      <label for="email1">Your Email</label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input id="name1" type="text" name="name" class="form-control" placeholder="Your Full Name" required>
                      <label for="name1">Your Full Name</label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input id="phone1" type="tel" name="phone" class="form-control" placeholder="Your Phone Number" pattern="\d{10}" required>
                      <label for="phone1">Your Phone Number</label>
                      <small class="text-muted">Enter a valid 10-digit phone number (e.g., 1234567890)</small>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input id="street1" type="text" name="street" class="form-control" placeholder="Street Address" required>
                      <label for="address1">Street Address</label>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-floating">
                      <input id="city1" type="text" name="city" class="form-control" placeholder="City" required>
                      <label for="city1">City</label>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-floating">
                      <input id="state1" type="text" name="state" class="form-control" placeholder="State" required>
                      <label for="state1">State</label>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-floating">
                      <input id="zip1" type="text" name="zip" class="form-control" placeholder="ZIP Code" pattern="^\d{5}$" required>
                      <label for="zip1">ZIP Code</label>
                      <small class="text-muted">Enter a 5-digit ZIP code (e.g., 12345)</small>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-floating">
                      <textarea id="notes1" name="notes" class="form-control" placeholder="Additional Notes" style="height: 100px;"></textarea>
                      <label for="notes1">Additional Notes</label>
                    </div>
                  </div>
                  <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Submit Order</button>
                  </div>
                </div>
              </form>
              

            </div>
